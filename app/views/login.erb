<div class="container">
    <form action="./login" method="POST">
      <div class="header">
        <h2> Log In </h2>
      </div>

      <div class="sep"></div>

      <div class="inputs">
        <div class="row">
          <div class="col-xs-4">
            <label for="login-email"> E-mail: </label>
          </div>
          <div class="col-xs-8">
            <input type="email" id="login-email" name="login-email" placeholder="Enter email">
          </div>
        </div>

        <div class="row">
          <div class="col-xs-4">
            <label for="login-password" > Password: </label>
          </div>
          <div class="col-xs-8">
            <input type="password" id="login-password" name="login-password" placeholder="Password">
          </div>
        </div>

        <button name="login" class="center-block"> Log In </button>
      </div>
    </form>
</div>

<div class="container">
    <form action="./signup" method="POST">
      <div class="header">
        <h2> Sign Up </h2>
      </div>

      <div class="sep"></div>

      <div class="inputs">
        <div class="row">
          <div class="col-xs-5">
            <label for="signup-first-name"> First Name: </label>
          </div>
          <div class="col-xs-7">
            <input type="text" id="signup-first-name" name="signup-first-name" placeholder="First name">
          </div>
        </div>

        <div class="row">
          <div class="col-xs-5">
            <label for="signup-last-name"> Last Name: </label>
          </div>
          <div class="col-xs-7">
            <input type="text" id="signup-last-name" name="signup-last-name" placeholder="Last name">
          </div>
        </div>

        
        <div class="row">
          <div class="col-xs-5">
            <label for="signup-email"> E-mail: </label>
          </div>
          <div class="col-xs-7">
            <input type="email" id="signup-email" name="signup-email" placeholder="Enter email">
          </div>
        </div>

        <div class="row">
          <div class="col-xs-5">
            <label for="signup-password"> Password: </label>
          </div>
          <div class="col-xs-7">
            <input type="password" id="signup-password" name="signup-password" placeholder="Set a password">                
          </div>
        </div>

        <button name="submit" class="center-block"> Submit </button>
      </div>
    </form>
</div>
